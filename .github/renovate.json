{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "enabled": true
    },
    {
      "matchManagers": ["gomod"],
      "enabled": true
    }
  ],
  "docker": {
    "enabled": true
  },
  "gomod": {
    "enabled": true
  },
  "platformAutomerge": true
}